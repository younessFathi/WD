{
    "manifest_version": 2,
    "name": "traduction extension",
    "version": "0.1",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>" // work on all web sites
            ],
            "js": ["content.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action":{
        "default_icon": "icon.png"
    }
}